// https://stackoverflow.com/a/78714161
{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "@next/next/no-html-link-for-pages": 0,
    "quotes": ["error", "single"],
    "semi": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js", "*.mjs"],
      // This is the default parser of ESLint
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": "latest"
      }
    }
  ]
}
